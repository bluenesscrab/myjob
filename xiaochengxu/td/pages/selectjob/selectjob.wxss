/**selectjob.wxss**/
page {
  display: block;
  min-height: 100%;
  font-size:14px;
  color:#333;
  background-color:#f3f3f3;
}
/* public */
.labels{
  border-radius:4px;
  padding:6px 12px;
  margin:5px;
  color:#6c6c6c;
  font-size:12px;
  background-color:#f2f2f2;
  white-space:nowrap;
  display:inline-block;
}
.labels.active{
  border:1px solid #ff9148;
  background-color:white;
  color:#ff9148;
  margin:4px;
}
.text-warning{
  color:#f90;
}
.sections{ 
  background-color:white;
  margin:15px 0;
}
.text-right{
  text-align:right;
}
.flex-wrap{
  display:flex;
  flex-direction:row;
}
.flex-item{
  display: flex;
  flex: 1;
  display:block;
  align-items: center;
  justify-content: center;
}
.flex-2{
  flex:2;
}
.flex-3{
  flex:3;
}
.flex-4{
  flex:4;
}
.flex-5{
  flex:5;
}
.flex-6{
  flex:6;
}
.flex-7{
  flex:7;
}
/* end public */
.pickers{
  display:block;
  width:100%;
}
.sections .titles{
  padding:0 15px;
  height:40px;
  line-height:40px;
}
.sections .cont{
  padding: 0 15px 10px;
}
.btn-submit{
  font-size:14px;
  display:block;
  margin:0 50px;
}
