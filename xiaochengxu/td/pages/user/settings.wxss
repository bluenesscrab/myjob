.head {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 10px;
  color: #fff;
  background-color: #323c45;
}
.head image {
  border-radius: 50%;
  vertical-align: middle;
}
.head .photo {
  margin-right: 10px;
}
.head .weixin {
  margin-left: 10px;
}
.head .photo image {
  width: 50px;
  height: 50px;
  border: 2px solid #fff;
}
.head .weixin image {
  width: 20px;
  height: 20px;
  border: 1px solid #fff;
  opacity: .5;
}
.head .info {
  flex: 1;
  font-size: 12px;
  overflow: hidden;
}
.head .info text {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.head .info .user-name {
  font-size: 14px;
}
