/** searchlist.wxss **/
page {
  display: block;
  min-height: 100%;
  font-size:14px;
  background-color:#f5f5f5;
}
/* public */
.flex-wrap{
  height: 32px;
  display:flex;
  flex-direction:row;
}
.text-center{
  text-align:center;
}
.flex-item{
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}
/* public end */

/* search-bar */
.search-bar{
  padding:6px 0 6px 10px;
  background-color:#323c46;
  font-size:14px;
  color:white;
}
.search-bar .search-parent{
  padding:0 36px 0 10px;
  flex:5;
  border-radius:16px;
  position:relative;
  color:#333;
  background-color:#e9e9e9;
}
.search-bar .search-parent form{
  width:100%;
}
.search-bar .search-parent .input-text{
  width:100%;
  height:32px;
}
.search-bar .search-parent .search-btn{
  position:absolute;
  top:0;
  right:0;
  background:none;
  width:36px;
  height:100%;
  line-height:32px;
  padding:0;
}
.search-bar .search-parent .search-btn .icon-search{
  font-size:20px;
}
.search-bar .search-parent .search-btn::after{
  border-color:transparent;
}
.search-bar .right-btn{
  justify-content: center;
}
/* end search-bar */

/* selectbar */
.selectbar{
  height:40px;
  background-color:white;
  font-size: 14px;
  color:#333;
  border-bottom:1px solid #c9c9c9;
}
.selectbar view{
  border-left:1px solid #c9c9c9;
}
.selectbar view .texts{
  display:inline-block;
  width:70px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow:hidden;
  text-align:center;
}
.selectbar view:first-child{
  border:none;
}
/* end selectbar */

.slide-image {
  width: 750rpx;
  height: 500rpx;
}

.job-list .section {
  padding: 10px 0;
  margin: 0 10px;
  box-sizing: border-box;
  border-bottom: 1px solid #e7e7e7;
}
.job-list .section .info {
  display: flex;
  flex-direction: row;
}
.job-list .section .info .thumb {
  margin-right: 10px;
  width: 60px;
  height: 60px;
  border: 1px solid #e7e7e7;
  background-color:#f9f9f9;
  position: relative;
}
.job-list .section .info .thumb:after {
  position: absolute;
  content: '';
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  box-shadow: 0 0 2px 3px #fff inset;
}
.job-list .section .info .thumb image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.job-list .section .info .detail {
  flex: 1;
  overflow: hidden;
}
.job-list .section .info .detail .job-title {
  font-size: 18px;
  display: flex;
}
.job-list .section .info .detail .job-title .title {
  flex: 1;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
}
.job-list .section .info .detail .job-title .title-gray{
  color:#999;
}
.job-list .section .info .detail .job-title .is-apply{
  font-size:12px;
  color:#fff;
  background:#ccc;
  border-radius:3px;
  line-height:16px;
  height:16px;
  display:inline-block;
  padding:1px;
}
.job-list .section .info .detail .job-title .salary {
  color: #ff8f3f;
  margin-left: 5px;
}
.job-list .section .info .detail .sub-title {
  color: #999;
  margin: 2px 0;
}
.job-list .section .info .detail .sub-title text {
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.job-list .section .info .detail .sub-info {
  color: #999;
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.job-list .section .info .detail .sub-info text {
  margin-right: 5px;
}
.job-list .section .info .detail .sub-info text::last-child {
  margin-right: 0;
}
.job-list .section .labels .label {
  display: inline-block;
  vertical-align: middle;
  margin: 5px 5px 0 0;
  padding: 0 5px;
  font-size: 12px;
  color: #969696;
  height: 19px;
  line-height: 20px;
  border: 1px solid #e8e8e8;
  border-radius: 3px;
}
