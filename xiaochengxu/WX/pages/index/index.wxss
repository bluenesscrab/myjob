/**index.wxss**/
.index{
    background-color:#eee;
    min-height: 100%;
    font-size:30rpx;
}
.slide-image{  
    width: 100%;  
} 
.uer{
  padding:30rpx;
  background-color: #fff;
  flex-direction: column;
  align-items: center;
  color:#369;
  font-size: 32rpx;
}
.flex-wrap{
  height: 120rpx;
  width:100%;
  display:flex;
  flex-direction:row;
  margin-bottom:30rpx;
}
.icons-phone{
  width:60rpx;
  height:60rpx;
  margin-right:8rpx;
}
.flex-item{
  color: #fff;
  display: flex;
  flex: 1;
  background-color: #369;
  justify-content: center;
  align-items: center;
  font-size:34rpx; 
}
.first{
  border-right:1px solid #ccc;
  background-color: #f90;
}

.list{
  padding:30rpx 20rpx;
  background-color:white;
  font-size:30rpx;
  border-top:1px solid #ccc;
}
.labels{
  padding:12rpx;
  background-color:#ff28de;
  font-size:24rpx;
  margin-right:12rpx;
  color:#fff;
  border-radius:4px;
}
.ends{
  margin-top:30rpx;
  background-color:#fff;
  padding:20rpx;
  line-height:1.8em;
}
.title{
  font-size:34rpx;
}
.my-hotel{
  text-indent: 2em;
  display: block;
  color:#333;

}
.no-border{
  border:none;
}
