/**index.wxss**/
.search-bar {
  box-sizing: border-box;
  padding: 8px 10px;
  border-bottom: 1px solid #c1c1c1;
  background-color: #fff;
}
.search-bar view {
  border: 1px solid #ddd;
  padding: 3px 10px;
  border-radius: 20px;
  font-size: 14px;
  text-align: center;
  color: #999;
}
.slide-image {
  width: 750rpx;
  height: 375rpx;
}

.job-list {
  background-color: #fff;
}
.job-list .section {
  padding: 10px 0;
  margin: 0 10px;
  box-sizing: border-box;
  border-bottom: 1px solid #e7e7e7;
}
.job-list .section .info {
  display: flex;
  flex-direction: row;
}
.job-list .section .info .thumb {
  margin-right: 10px;
  width: 60px;
  height: 60px;
  border: 1px solid #e7e7e7;
  position: relative;
}
.job-list .section .info .thumb:after {
  position: absolute;
  content: '';
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  box-shadow: 0 0 2px 3px #fff inset;
}
.job-list .section .info .thumb image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.job-list .section .info .detail {
  flex: 1;
  overflow: hidden;
}
.job-list .section .info .detail .job-title {
  font-size: 18px;
  display: flex;
}
.job-list .section .info .detail .job-title .title {
  flex: 1;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
}
.job-list .section .info .detail .job-title .salary {
  color: #ff8f3f;
  margin-left: 5px;
}
.job-list .section .info .detail .sub-title {
  color: #999999;
  margin: 2px 0;
}
.job-list .section .info .detail .sub-title text {
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.job-list .section .info .detail .sub-info {
  color: #999999;
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.job-list .section .info .detail .sub-info text {
  margin-right: 5px;
}
.job-list .section .info .detail .sub-info text::last-child {
  margin-right: 0;
}
.job-list .section .labels .label {
  display: inline-block;
  vertical-align: middle;
  margin: 5px 5px 0 0;
  padding: 0 5px;
  font-size: 12px;
  color: #969696;
  height: 19px;
  line-height: 20px;
  border: 1px solid #e8e8e8;
  border-radius: 3px;
}
