.title {
  background-color: #f2f2f2;
  line-height: 30px;
  padding: 0 10px;
  color: #666;
}
.list-view .list-item .list-icon {
  font-size: 20px;
}
.list-view .list-item .list-title {
  font-size: 12px;
  color: #666;
}
.list-view .list-item .list-title .job-title {
  font-size: 16px;
  color: #333;
}
.list-view .list-item .list-title .apply-status {
  display: inline-block;
  font-size: 10px;
  margin-left: 5px;
  background-color: #bbbbbb;
  color: #fff;
  vertical-align: middle;
  padding: 0 2px;
  line-height: 14px;
  border-radius: 2px;
}
.list-view .list-item .salary {
  color: #ff8a23;
}